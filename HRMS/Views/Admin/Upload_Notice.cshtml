
<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>_Admin</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    @*<meta http-equiv="expires" content="0" />
        <meta http-equiv="Cache-Control" content="no-cache" />
        <meta http-equiv="Pragma" content="no-cache" />*@
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="~/assets/images/download.png" type="image/x-icon" />
    <title>@ViewBag.Title  Krishi Nideshalaya Uttar Pradesh, Krishi Bhawan, Lucknow</title>
    <!--MAIN JS FILE -->
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <!--MAIN JS FILE -->
    <!--Alertify -->
    <script defer src="~/assets/js/alertify.min.js"></script>
    <link href="~/assets/css/alertify.min.css" rel="stylesheet" />
    <!--Alertify -->
    <!-- PAGE LOADER -->
    <script defer src="~/assets/js/jquery.blockUI.js"></script>
    <!-- PAGE LOADER -->
    <!-- MULTIPLE SELECT DROPDOWN -->
    <link rel="stylesheet" href="~/assets/css/select2.min.css" />
    <script defer src="~/assets/js/select2.min.js"></script>


</head>
<body>
    <div class="main-panel content-wrapper">
        <div class="content-wrapper">
            <div class="card">
                <div class="page-header">
                    <h3 class="page-title" style="align-content:center">
                        <span class="page-title-icon bg-gradient-primary text-white mr-2">
                            <i class="mdi mdi-home"></i>
                        </span> Upload Notice
                    </h3>
                </div>

                <br />
                @using (Html.BeginForm("Upload_Notice", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
    <div class="form-group row">
        <div class="col-md-3"></div>
        <div class="col-md-2">NOTICE FOR</div>
        <div class="col-md-3">
            <select id="type" class="form-control">
                <option value="">SELECT</option>
                <option value="1">MANDAL</option>
                <option value="2">CANDIDATE</option>
            </select>
        </div>
        <div class="col-md-3" id="mandal">
            <select id="Janpad" name="mandal" class="form-control"></select>
        </div>
        <div class="col-md-3" id="cand">
            <select id="candidate" name="candidate" class="form-control"></select>
        </div>
    </div>
    <h4>@ViewBag.Message</h4>


    <div id="dvnotice">
        <div class="row">

        </div>
        <br />
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-2">
                <label style="padding:15px"> <b>NOTICE TITLE :</b></label>
            </div>
            <div class="col-md-8">
                <input id="titlenotice" type="text" name="txt" class="form-control" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-6">
                @Html.TextBox("file", "", new { type = "file" }) <br /> <br />
            </div>
            <br />
        </div>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-6">
                <input type="submit" value="Upload" id="save" /><br /><br /><br />

            </div>
        </div>
    </div>
}

            </div>
        </div>
    </div>
</body>
</html>
